{
	"compilerOptions": {
		"target": "es6",
		"module": "CommonJS",
		"lib": ["dom", "es6", "es2016", "esnext.asynciterable"],
		"allowJs": true,
		"outDir": "./dist",
		"rootDir": "src",
		"strict": true,
		"noImplicitAny": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"types": ["node", "@types/jest"],
		"typeRoots": ["./node_modules/@types"]
	},
	"include": ["./src/**/*.ts"],
	"exclude": ["node_modules", "src/**/*.spec.ts"]
}
